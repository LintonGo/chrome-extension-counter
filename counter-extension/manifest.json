{
  "manifest_version": 3,
  "name": "Badge Counter",
  "version": "1.0",
  "description": "直接在图标上显示持久化计数器",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "点击设置计数器"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon.png"
  }
}